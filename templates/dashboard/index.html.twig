{% extends 'base.html.twig' %}

{% block title %}PJAY Shoe Gallery | Home{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --color-primary-brown: #764C29;
        --color-secondary-light: #F2F2F2;
        --font-heading: 'Franklin Gothic Demi Cond', sans-serif;
        --font-body: 'Inter', sans-serif;
    }

    body { font-family: var(--font-body); }
    .bg-brand-brown { background-color: var(--color-primary-brown); }
    .text-brand-brown { color: var(--color-primary-brown); }
    .border-brand-brown { border-color: var(--color-primary-brown); }
    .bg-brand-light { background-color: var(--color-secondary-light); }

    .btn-primary {
        background-color: var(--color-primary-brown);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-primary:hover { background-color: #5f3f1f; }

    .hero-bg {
        background: linear-gradient(to right, rgba(118, 76, 41, 0.85), rgba(0, 0, 0, 0.6)),
                    url('https://images.unsplash.com/photo-1600180758890-6a6f9a4b8a2a') center/cover;
    }

    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .footer-link { color: #ddd; transition: color 0.2s ease; }
    .footer-link:hover { color: white; }
</style>
{% endblock %}

