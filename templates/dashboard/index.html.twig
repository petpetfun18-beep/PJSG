{% extends 'base.html.twig' %}

{% block title %}PIJAY Shoe Gallery | Welcome{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  body {
    background: url("{{ asset('images/brown.png') }}") center/cover no-repeat fixed;
    background-attachment: fixed;
    font-family: 'Poppins', sans-serif;
  }

  .hero {
    background: rgba(0, 0, 0, 0.55);
    color: white;
    text-align: center;
    padding: 180px 20px;
    backdrop-filter: blur(3px);
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 15px;
    font-weight: 700;
  }

  .hero p {
    font-size: 1.3rem;
    margin-bottom: 40px;
    font-weight: 400;
  }

  .features {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
    margin: 60px 0;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.95);
    padding: 30px;
    border-radius: 20px;
    text-align: center;
    flex: 1 1 250px;
    max-width: 300px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 25px rgba(0,0,0,0.15);
  }

  .feature-card img {
    width: 80px;
    margin-bottom: 20px;
  }

  .feature-card h3 {
    font-size: 1.3rem;
    margin-bottom: 10px;
    color: #764C29;
  }

  .feature-card p {
    font-size: 1rem;
    color: #555;
  }

  .welcome-message {
    background: rgba(118, 76, 41, 0.85);
    color: white;
    text-align: center;
    padding: 60px 20px;
    border-radius: 20px;
    margin: 40px 0;
    font-size: 1.2rem;
  }

  .cta {
    text-align: center;
    margin: 50px 0;
  }

  .cta h2 {
    font-size: 2rem;
    margin-bottom: 20px;
    color: #ffffffff;
  }

  .cta p {
    font-size: 1.1rem;
    color: #f9f7f7ff;
  }

  /* Admin Modal */
  .modal {
    display: none;
    position: fixed;
    z-index: 50;
    left: 0; top: 0;
    width: 100%; height: 100%;
    background-color: rgba(0,0,0,0.75);
    backdrop-filter: blur(4px);
    justify-content: center;
    align-items: center;
    overflow: auto;
    animation: fadeIn 0.3s ease;
  }

  @keyframes slideDown {
    0% { transform: translateY(-50px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
  }

  @keyframes fadeIn {
    from { opacity: 0; } 
    to { opacity: 1; }
  }

  .modal-content {
    background: #fff;
    padding: 40px 30px;
    border-radius: 25px;
    text-align: center;
    width: 90%;
    max-width: 400px;
    box-shadow: 0 15px 35px rgba(0,0,0,0.3);
    animation: slideDown 0.4s ease;
    position: relative;
  }

  .modal-content h2 {
    color: #764C29;
    margin-bottom: 20px;
  }

  .modal-content input {
    width: 80%;
    padding: 12px 15px;
    margin: 10px 0;
    border-radius: 12px;
    border: 1px solid #ccc;
    font-size: 1rem;
    outline: none;
    transition: 0.3s;
  }

  .modal-content input:focus {
    border-color: #764C29;
    box-shadow: 0 4px 15px rgba(118,76,41,0.2);
  }

  .modal-content button {
    background: #764C29;
    color: white;
    border: none;
    padding: 12px 28px;
    border-radius: 50px;
    cursor: pointer;
    font-weight: bold;
    font-size: 1rem;
    margin-top: 10px;
    transition: 0.3s ease;
  }

  .modal-content button:hover {
    background: #5f3f22;
  }

  .close-modal {
    position: absolute;
    top: 15px;
    right: 20px;
    font-size: 1.5rem;
    cursor: pointer;
    color: #764C29;
    transition: 0.3s ease;
  }

  .close-modal:hover {
    color: #5f3f22;
  }
</style>
{% endblock %}

{% block body %}
<section class="hero">
  <h1>Welcome to PIJAY Shoe Gallery</h1>
  <p>Your ultimate destination for stylish and comfortable shoes, handcrafted with love.</p>
</section>

<section class="features">
  <div class="feature-card">
    <img src="{{ asset('images/icons/shoes.png') }}" alt="Quality Shoes">
    <h3>Quality Shoes</h3>
    <p>Every pair is made with precision and premium materials for unmatched comfort.</p>
  </div>
  <div class="feature-card">
    <img src="{{ asset('images/icons/delivery.png') }}" alt="Fast Delivery">
    <h3>Fast Delivery</h3>
    <p>Get your favorite shoes delivered to your doorstep in no time.</p>
  </div>
  <div class="feature-card">
    <img src="{{ asset('images/icons/support.png') }}" alt="Customer Support">
    <h3>Customer Support</h3>
    <p>We are always ready to assist you with any inquiries or concerns.</p>
  </div>
</section>

<div class="welcome-message">
  Explore our collection, find your perfect fit, and step into confidence every day.
</div>

<section class="cta">
  <h2>Stay Stylish, Stay Confident</h2>
  <p>Browse our unique designs and enjoy a shopping experience tailored just for you.</p>
</section>

{# Admin Login Modal #}
<div id="adminModal" class="modal">
  <div class="modal-content">
    <span class="close-modal" id="closeModal">&times;</span>
    <h2>Admin Login</h2>
    <input type="text" id="adminUser" placeholder="Username">
    <input type="password" id="adminPass" placeholder="Password">
    <br>
    <button id="loginBtn">Login</button>
  </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
  const modal = document.getElementById('adminModal');
  const btn = document.getElementById('navbarManageBtn'); // navbar button id
  const closeBtn = document.getElementById('closeModal');
  const loginBtn = document.getElementById('loginBtn');

  btn.onclick = () => modal.style.display = 'flex';
  closeBtn.onclick = () => modal.style.display = 'none';
  window.onclick = (e) => { if(e.target == modal) modal.style.display = 'none'; };

  loginBtn.onclick = () => {
    const user = document.getElementById('adminUser').value;
    const pass = document.getElementById('adminPass').value;

    if(user === 'admin' && pass === 'admin123') {
      window.location.href = "{{ path('app_admin_dashboard') }}";
    } else {
      alert('Invalid username or password!');
    }
  }
</script>
{% endblock %}
