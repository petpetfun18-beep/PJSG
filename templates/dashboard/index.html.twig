{% extends 'base.html.twig' %}
{% block navbar %}{% endblock %}

{% block title %}Admin Dashboard | PIJAY Shoe Gallery{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">

<style>
body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    min-height: 100vh;
    display: flex;
    background: #f4f2ef;
}

.sidebar {
    width: 260px;
    background-color: #764C29;
    color: white;
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    position: fixed;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow: 2px 0 15px rgba(0,0,0,0.15);
}

.sidebar h2 {
    font-size: 1.7rem;
    margin-bottom: 40px;
    text-align: center;
    font-weight: 600;
}

.sidebar a {
    display: flex;
    align-items: center;
    color: white;
    text-decoration: none;
    margin-bottom: 14px;
    padding: 12px 15px;
    border-radius: 10px;
    transition: all 0.25s ease;
    font-size: 0.95rem;
    font-weight: 500;
}

.sidebar a i {
    margin-right: 12px;
    font-size: 1.1rem;
}

.sidebar a:hover, .sidebar a.active {
    background-color: #5f3f22;
    transform: translateX(4px);
}

.logout-btn {
    margin-top: auto;
    background-color: #8a5630;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    text-align: center;
    transition: background 0.25s ease;
}

.logout-btn:hover {
    background-color: #9d6338;
}

.main-content {
    margin-left: 280px;
    flex: 1;
    padding: 40px 30px;
}

.welcome-user {
    background: #764C29;
    color: white;
    padding: 22px;
    border-radius: 12px;
    font-size: 1.45rem;
    margin-bottom: 40px;
    text-align: center;
    font-weight: 500;
    box-shadow: 0 5px 15px rgba(0,0,0,0.12);
}

.cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 25px;
}

.card {
    background: white;
    border-radius: 14px;
    padding: 25px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    transition: all 0.25s;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.12);
}

.card h3 {
    font-size: 1.15rem;
    margin-bottom: 8px;
    color: #764C29;
    font-weight: 600;
}

.card p a {
    color: #8a5630;
    text-decoration: none;
    font-weight: 500;
}

.card p a:hover {
    text-decoration: underline;
}

.recent-activities h2 {
    color: #764C29;
    margin-bottom: 20px;
    font-size: 1.4rem;
    font-weight: 600;
}

.recent-activities table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    overflow: hidden;
}

.recent-activities th {
    background-color: #764C29;
    color: white;
    padding: 12px;
    text-align: left;
    font-size: 0.95rem;
}

.recent-activities td {
    padding: 12px;
    border-bottom: 1px solid #eee;
    font-size: 0.9rem;
}

.recent-activities tr:last-child td { border-bottom: none; }

.recent-activities-container {
    max-height: 400px;
    overflow-y: auto;
}

@media (max-width: 768px) {
    .sidebar {
        width: 100%;
        height: auto;
        flex-direction: row;
        justify-content: space-around;
        padding: 15px;
    }
    .sidebar h2 { display: none; }
    .main-content { margin-left: 0; }
}
</style>
{% endblock %}

{% block body %}
<div class="sidebar">
    <img src="{{ asset('images/logo white.png') }}" alt="Logo" class="logo-img">
    <h2>Admin Panel</h2>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_dashboard') }}" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="{{ path('app_user_index') }}"><i class="fas fa-users"></i> Manage Users</a>
        <a href="{{ path('app_activity_logs') }}"><i class="fas fa-clipboard-list"></i> Activity Logs</a>
    {% endif %}
    <a href="{{ path('app_admin_dashboard') }}"><i class="fas fa-shoe-prints"></i> Manage Shoes</a>
    <a href="{{ path('app_admin_orders') }}"><i class="fas fa-boxes"></i> Manage Orders</a>

    <form action="{{ path('app_logout') }}" method="post" style="margin-top:auto;">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
        <button type="submit" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>
    </form>
</div>

<div class="main-content">
    {% if app.user %}
        <div class="welcome-user">
            Welcome back, {{ app.user.name ?? app.user.username }}!
        </div>
    {% endif %}

    <div class="cards">
        <div class="card">
            <h3>Manage Shoes</h3>
            <p><a href="{{ path('app_admin_dashboard') }}">View / Manage Shoes</a></p>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
        <div class="card">
            <h3>Manage Users</h3>
            <p><a href="{{ path('app_user_index') }}">View / Manage Users</a></p>
        </div>
        {% endif %}

        <div class="card">
            <h3>Manage Orders</h3>
            <p><a href="{{ path('app_admin_orders') }}">View / Manage Orders</a></p>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
    <div class="recent-activities" style="margin-top: 50px;">
        <h2>Recent Activities</h2>
        <div class="recent-activities-container">
            <table id="activityTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in activityLogs %}
                        <tr>
                            <td>{{ log.createdAt|date('Y-m-d H:i') }}</td>
                            <td>{{ log.action }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2" style="text-align:center;">No recent activities found.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script>
$(document).ready(function() {
    $('#activityTable').DataTable({
        pageLength: 7,
        lengthChange: false,
        ordering: true,
        info: false,
        searching: false
    });
});
</script>
{% endblock %}
