{% extends 'base.html.twig' %}

{% block title %}Order Details - {{ order.customerName }}{% endblock %}

{% block body %}
<div class="min-h-screen flex justify-center items-start py-10">
  <div class="max-w-3xl w-full bg-white shadow-xl rounded-3xl p-8">
    <h1 class="text-3xl font-bold text-[#764C29] mb-6">Order Details</h1>

    <div class="space-y-3">
      <p><strong>Customer:</strong> {{ order.customerName }}</p>
      <p><strong>Email:</strong> {{ order.customerEmail }}</p>
      <p><strong>Address:</strong> {{ order.customerAddress }}</p>
      <p><strong>Shoe:</strong> {{ order.shoe.name }}</p>
      <p><strong>Color:</strong> {{ order.selectedColor }}</p>
      <p><strong>Size:</strong> {{ order.selectedSize }}</p>
      <p><strong>Payment Method:</strong> {{ order.paymentMethod }}</p>
      <p><strong>Total:</strong> â‚±{{ order.totalAmount|number_format(2) }}</p>
      <p><strong>Status:</strong> {{ order.status }}</p>
      <p><strong>Ordered On:</strong> {{ order.orderDate|date('Y-m-d H:i') }}</p>
    </div>

    <div class="mt-6 flex gap-3">
      <a href="{{ path('admin_orders_index') }}" 
         class="bg-gray-300 text-[#764C29] px-5 py-2 rounded-full hover:bg-gray-400 transition">Back to Orders</a>

      <a href="{{ path('admin_order_update_status', {'id': order.id}) }}" 
         class="bg-green-500 text-white px-5 py-2 rounded-full hover:bg-green-600 transition">
         Update Status
      </a>
    </div>
  </div>
</div>
{% endblock %}
