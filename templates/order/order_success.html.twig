{% extends 'base.html.twig' %}

{% block title %}Order Successful{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-b from-[#F2F2F2] to-white py-12 px-6 flex justify-center">
  <div class="w-full max-w-3xl bg-white shadow-2xl rounded-3xl p-8 animate-fadeIn text-center">

    <h1 class="text-3xl font-extrabold text-[#764C29] mb-6">Order Placed Successfully!</h1>

    {% if shoe %}
      <img src="{{ asset('uploads/images/' ~ shoe.image) }}" alt="{{ shoe.name }}" class="w-64 h-64 object-cover rounded-xl shadow-md mx-auto mb-6">
      <h2 class="text-2xl font-semibold">{{ shoe.name }}</h2>
      <p class="text-gray-600 mt-2">Color: {{ order.selectedColor }}</p>
<p class="text-gray-600">Size: {{ order.selectedSize }}</p>
<p class="text-gray-600">Payment Method: {{ order.paymentMethod }}</p>

      <p class="text-gray-700 font-semibold mt-2">₱{{ shoe.price|number_format(2) }}</p>
    {% endif %}

    <p class="mt-6 text-gray-700">Thank you, {{ order.customerName }}! Your order will be processed shortly.</p>

    <a href="{{ path('app_shop_index') }}" class="inline-block mt-6 bg-[#764C29] text-white px-6 py-3 rounded-full hover:bg-[#5f3f22] transition">
      ← Back to Shop
    </a>
  </div>
</div>

<style>
@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(-20px); }
  100% { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn { animation: fadeIn 0.8s ease-out; }
</style>
{% endblock %}
