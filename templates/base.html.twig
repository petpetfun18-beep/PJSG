    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}PJAY Shoe Gallery{% endblock %}</title>

    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Inter font -->
